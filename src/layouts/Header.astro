---
import { Image } from "astro:assets";
import Logo from "@assets/logo.svg";
---

<style>
  .overlined::after {
    @apply content-[""] w-full h-[3px] bg-amber-300 absolute top-2 left-0;
  }
</style>

<header
  class="flex justify-between items-center h-16 border-b border-b-sky-300 bg-slate-900 bg-opacity-70"
>
  <div class="w-11/12 md:w-5/6 max-w-6xl mx-auto">
    <div
      class="flex gap-2 items-centers text-center text-2xl font-bold tracking-tighter text-sky-300"
    >
      <Image
        src={Logo}
        alt="moneo logo"
        width={24}
        height={24}
        class="mt-[6px]"
      />
      <span>Mone<span class="overlined relative">o</span></span>
    </div>
  </div>
</header>
